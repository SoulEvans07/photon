{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "module": "esnext",
    "target": "es2020",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": false,
    "typeRoots": ["node_modules/@types/", "src/typings/"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
